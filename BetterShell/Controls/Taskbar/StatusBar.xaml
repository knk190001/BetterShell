<UserControl x:Class="BetterShell.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BetterShell.Controls"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="215" HorizontalAlignment="Right">
    <Border Width="215" VerticalAlignment="Center" Style="{StaticResource DefaultPanel.Style}">
        <StackPanel Width="192" Orientation="Horizontal"  >
            <local:StatusBarIcon Icon="{StaticResource SystemTrayIconDrawingImage}" IconWidth="14"/>
            <local:StatusBarIcon Icon="{StaticResource VolumeIconDrawingImage}" IconWidth="15"/>
            <local:StatusBarIcon Icon="{StaticResource WifiIconDrawingImage}" IconWidth="14"/>
            <local:StatusBarIcon Icon="{StaticResource BatteryIndicatorDrawingImage}" IconWidth="18"/>
        </StackPanel>
    </Border>
</UserControl>
