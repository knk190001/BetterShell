<UserControl x:Class="BetterShell.StartMenu.Controls.Application"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BetterShell.StartMenu.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Button Style="{StaticResource Panel.Button.Style}" Height="45" Click="ButtonBase_OnClick">
        <StackPanel Orientation="Horizontal" Width="270">
            <Border >
                <Image Source="{Binding Image}" Width="32" />
            </Border>
            <TextBlock Text="{Binding Name}" Foreground="White" VerticalAlignment="Center"
                       FontSize="13" Margin="16,0,0,0" />
        </StackPanel>
    </Button>
</UserControl>
